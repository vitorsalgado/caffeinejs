{
  "version": "0.0.0",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "application",
    "core",
    "di",
    "examples/*",
    "internal/*",
    "test/*"
  ],
  "ignoreChanges": [
    "**/*.md"
  ],
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md"
      ],
      "message": "release: %s"
    }
  }
}
