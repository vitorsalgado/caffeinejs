{
  "name": "@winter-framework/monorepo",
  "version": "0.0.0",
  "description": "Winter Framework is Coming",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "yarn workspaces foreach run build",
    "build:clean": "yarn workspaces foreach exec rm -rf dist",
    "test": "jest --detectOpenHandles",
    "lint": "eslint --ext .ts .",
    "lint:fix": "yarn lint -- --fix",
    "format": "prettier './**' --write --ignore-unknown",
    "format:check": "prettier './**' --ignore-unknown --check",
    "prepare": "husky install",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "workspaces": [
    "core"
  ],
  "engines": {
    "node": ">=16"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vitorsalgado/winter-framework.git"
  },
  "author": {
    "name": "Vitor Hugo Salgado",
    "url": "https://github.com/vitorsalgado"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vitorsalgado/winter-framework/issues"
  },
  "homepage": "https://github.com/vitorsalgado/winter-framework#readme",
  "packageManager": "yarn@3.1.1",
  "devDependencies": {
    "@commitlint/cli": "^16.0.2",
    "@commitlint/config-conventional": "^16.0.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "husky": "^7.0.0",
    "jest": "^27.4.7",
    "lerna": "^4.0.0",
    "lint-staged": "^12.1.7",
    "pinst": "^2.0.0",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  }
}
