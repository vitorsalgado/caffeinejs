{
  "name": "@caffeinejs/monorepo",
  "version": "0.0.0",
  "description": "CaffeineJs Monorepo Root",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist && lerna link",
    "build": "npx lerna run build",
    "build:clean": "npx lerna exec -- rm -rf dist",
    "test": "npx lerna run test",
    "test:coverage": "npm test -- --coverage",
    "test:ci": "npm test --colors --coverage --ci",
    "lint": "eslint --ext .ts .",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier './**' --write --ignore-unknown",
    "format:check": "prettier './**' --ignore-unknown --check",
    "prepare": "husky install",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "workspaces": [
    "application",
    "web",
    "std",
    "di",
    "examples/*",
    "internal/*",
    "test/*"
  ],
  "engines": {
    "node": ">=16"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vitorsalgado/winter-framework.git"
  },
  "author": {
    "name": "Vitor Hugo Salgado",
    "url": "https://github.com/vitorsalgado"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vitorsalgado/winter-framework/issues"
  },
  "homepage": "https://github.com/vitorsalgado/winter-framework#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@jest/globals": "^28.1.3",
    "@loopback/context": "^5.0.2",
    "@nestjs/common": "^9.0.8",
    "@nestjs/core": "^9.0.8",
    "@types/jest": "^28.1.6",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^18.6.5",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "colorette": "^2.0.19",
    "cronometro": "^1.1.0",
    "eslint": "^8.21.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-tsdoc": "^0.2.16",
    "fastify": "^4.4.0",
    "husky": "^8.0.1",
    "inversify": "^6.0.1",
    "jest": "^28.1.3",
    "lerna": "^5.4.0",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.19",
    "nx": "^15.4.5",
    "pinst": "^3.0.0",
    "prettier": "^2.7.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.6",
    "supertest": "^6.2.4",
    "table": "^6.8.0",
    "ts-jest": "28.0.7",
    "ts-node": "^10.9.1",
    "tsyringe": "^4.7.0",
    "typescript": "^4.7.4",
    "uuid": "^8.3.2"
  }
}
