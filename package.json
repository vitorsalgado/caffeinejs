{
  "name": "@caffeinejs/monorepo",
  "version": "0.0.0",
  "description": "CaffeineJs Monorepo Root",
  "main": "index.js",
  "scripts": {
    "build": "yarn workspaces foreach run build",
    "build:clean": "yarn workspaces foreach exec rm -rf dist",
    "test": "jest --detectOpenHandles",
    "test:coverage": "jest --detectOpenHandles --coverage",
    "test:ci": "yarn test --colors --coverage --ci",
    "lint": "eslint --ext .ts .",
    "lint:fix": "yarn lint -- --fix",
    "format": "prettier './**' --write --ignore-unknown",
    "format:check": "prettier './**' --ignore-unknown --check",
    "prepare": "husky install",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "workspaces": [
    "core",
    "di",
    "examples/*"
  ],
  "engines": {
    "node": ">=16"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vitorsalgado/winter-framework.git"
  },
  "author": {
    "name": "Vitor Hugo Salgado",
    "url": "https://github.com/vitorsalgado"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vitorsalgado/winter-framework/issues"
  },
  "homepage": "https://github.com/vitorsalgado/winter-framework#readme",
  "packageManager": "yarn@3.1.1",
  "devDependencies": {
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@jest/globals": "^27.5.1",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.17",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "eslint": "^8.8.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "husky": "^7.0.4",
    "jest": "27.5.1",
    "lerna": "^4.0.0",
    "lint-staged": "^12.3.3",
    "pinst": "^2.1.6",
    "prettier": "^2.5.1",
    "reflect-metadata": "^0.1.13",
    "ts-jest": "27.1.3",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5",
    "uuid": "^8.3.2"
  }
}
